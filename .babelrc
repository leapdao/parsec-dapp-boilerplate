{
  "plugins": [
    "transform-decorators-legacy",
    ["transform-class-properties", { "loose": true }],
    [
      "transform-runtime",
      {
        "polyfill": false,
        "regenerator": false
      }
    ]
  ],
  "env": {
    "production": {
      "plugins": [
        [
          "module-resolver",
          {
            "root": ["."],
            "alias": {
              "react": "preact-compat",
              "react-dom": "preact-compat",
              "create-react-class": "preact-compat/lib/create-react-class",
              "react-dom-factories": "preact-compat/lib/react-dom-factories"
            }
          }
        ]
      ]
    }
  }
}
